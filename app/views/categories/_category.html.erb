<div id="<%= dom_id category %>" class="categories-container">
  <div class="category-icon">
    <%= image_tag "#{category.icon}", class: 'icon-photo' %>
  </div>
  <div class="data-details">
    <div class="top-details">
      <div class="category-name">
        <%= link_to "#{category.name}", purchases_path(category_id: category.id, category_name: category.name), class: 'link-name' %>
      </div>
      <div class="category-total">
        $<%= current_user.purchases.joins(:categories).where(categories: { id: category.id }).sum(:amount) %>
      </div>
    </div>
    <div class="bottom-details">
      <%= category.created_at.strftime('%d %b %Y') %>
    </div>
  </div>
</div>
